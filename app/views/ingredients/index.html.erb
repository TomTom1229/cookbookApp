<h1>Ingredients</h1>

<% @ingredients.each_slice(4) do |ingredient_row| %>
  <div class="row">
    <% ingredient_row.each do |ingredient| %>
      <div class="span3">
        <h2><%= ingredient.name %></h2>
        <p class="description"><%= ingredient.description %></p>
        <div class="btn-group" >
          <%= link_to 'Show', ingredient, :class => "btn btn-mini" %>
          <%= link_to 'Edit', edit_ingredient_path(ingredient), :class => "btn btn-mini" %>
          <%= destroy_button ingredient %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<br />

<%= link_to 'New Ingredient', new_ingredient_path, :class => "btn" %>
