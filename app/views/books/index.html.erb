<h1>Books</h1>

<% @books.each do |book| %>
  <div>
    <p class="bookname"><%= book.name %></p>
    <p class="author">-<%= book.author %></p>
    <div class="btn-group">
      <%= link_to 'Show', book, :class => "btn btn-mini" %>
      <%= link_to 'Edit', edit_book_path(book), :class => "btn btn-mini" %>
      <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %>
    </div>
  </div>
<% end %>
</table>

