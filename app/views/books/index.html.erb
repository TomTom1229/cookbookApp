<h1>
  Books
  <%= link_to 'New Book', new_book_path, :class => "btn" %>
</h1>

<% @books.each do |book| %>
  <div>
    <p class="bookname"><%= book.name %></p>
    <p class="author">-<%= book.author %></p>
    <div class="btn-group">
      <%= link_to 'Show', book, :class => "btn btn-mini" %>
      <%= link_to 'Edit', edit_book_path(book), :class => "btn btn-mini" %>
      <%= destroy_button book %>
    </div>
  </div>
<% end %>
