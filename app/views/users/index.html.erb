<h1>Users</h1>
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>

<% @users.each_slice(4) do |user_row| %>
  <div class="row">
  <% user_row.each do |user| %>
    <div class="span3">
      <div>
        <span><%= image_tag user.avatar.url, :size => "50x50" %></span>
        <h3 class="username"><%= user.name %></h3>
      </div>
      <div class="btn-group">
        <%= link_to 'Show', user, :class => "btn btn-mini" %>
        <%= user_edit_button user %>
        <%= destroy_button user %>
      </div>
    </div>
  <% end %>
  </div>
<% end %>

<br />

<%= link_to 'New User', new_user_path, :class => "btn" if session[:admin] %>
