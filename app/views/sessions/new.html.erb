<h1>Log In</h1>

<% if flash[:alert] %>
  <p class="notice"><%= flash[:alert] %></p>
<% end %>
<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<%= form_tag do %>
  <p>
    <%= label_tag :name, "Name:" %>
    <%= text_field_tag :name, params[:name] %>
  </p>
  <p>
    <%= label_tag :password, 'Password:' %>
    <%= password_field_tag :password, params[:password] %>
  </p>
  <div class="btn-group">
    <%= submit_tag "Login", :class => "btn" %>
    <%= link_to 'Register', new_user_path, :class => "btn" %>
  </div> 
<% end %>