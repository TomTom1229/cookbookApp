<h1>Categories</h1>

<% @categories.each do |category| %>
  <div>
    <h3><%= category.name %></h3>
    <p class="description"><%= category.description %></p>
    <div class="btn-group">
      <%= link_to 'Show', category, :class => "btn" %>
      <%= link_to 'Edit', edit_category_path(category), :class => "btn" %>
      <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
    </div>
  </div>
<% end %>

<br />

<%= link_to 'New Category', new_category_path, :class => "btn" %>
