<h1>Listing units</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Short Name</th>
    <th>Type</th>
    <th>Conversion</th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.name %></td>
    <td><%= unit.short_name %></td>
    <td><%= unit.unit_type %></td>
    <td><%= unit.conversion %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

