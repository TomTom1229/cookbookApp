body {
    background-color: #252525;
    font-family: "Segoe UI", "Roboto Condensed", sans-serif;
    color: white;
    margin: 1em;
}

h1,
h2 {
    margin: 0;
}

h2 {
    font-size: 1em;
    font-style: italic;
}

a,
a:active,
a:visited {
    display: inline-block;
    text-decoration: none;
    color: inherit;
}

a.btn {
    color: #252525;
}